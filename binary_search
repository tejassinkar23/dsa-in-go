package main

import "fmt"

func search(nums []int, target int) int {
	l, r := 0, len(nums)-1

	for l <= r {
		m := l + (r-l)/2

		if nums[m] > target {
			r = m - 1
		} else if nums[m] < target {
			l = m + 1
		} else {
			return m
		}
	}
	return -1
}

func main() {
	nums := []int{-1, 0, 2, 4, 6, 8}
	target := 4
	result := search(nums, target)
	fmt.Println(result) // Output: 3
}
